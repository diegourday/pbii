---
import MapPin from "@/icons/MapPin";
import Phone from "@/icons/Phone";
import Mail from "@/icons/Mail";
import Clock from "@/icons/Clock";
---

<section
  id="informacion"
  class="mt-32 grid w-full bg-primary md:h-[500px] md:grid-cols-[2fr_1fr]"
>
  <div class="order-2 h-96 md:order-1 md:h-auto">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1935.2142575144203!2d-75.76533342354054!3d-14.05185483913632!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9110e3c55d585f5b%3A0x925b85a8d45daea2!2sInversiones%20Inmobiliarias%20PB%20S.A.C.!5e0!3m2!1ses-419!2spe!4v1728894294812!5m2!1ses-419!2spe"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>

  <div
    class="order-1 flex items-center justify-center bg-[url('/testimony-bg.jpg')] bg-cover bg-fixed bg-center text-white md:order-2 md:p-10"
  >
    <div class="w-full bg-primary/95 px-6 py-16 md:px-8 md:py-8">
      <h2 class="mb-6 text-center text-2xl font-semibold">
        Información de contacto
      </h2>
      <div class="flex flex-col gap-3 md:items-start">
        <p class="contact-item hours">
          <Clock className="size-6" />
          8:00 - 18:00 de Lunes a Sábado
        </p>
        <a
          href="https://maps.app.goo.gl/mSUp3kyZy8uXmc2B7"
          target="_blank"
          class="contact-item"
        >
          <MapPin className="size-6" /> Las Casuarinas 450B, Ica 11004
        </a>
        <a href="tel:+51944686742" target="_self" class="contact-item">
          <Phone className="size-6" />
          (+51) 944 686 742
        </a>
        <a
          href="mailto:ventas@pbinversionesinmobiliarias.com"
          target="_self"
          class="contact-item"
        >
          <Mail className="size-6" />
          ventas@pbinversionesinmobiliarias.com
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-item {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    padding: 12px 12px;
    font-weight: 400;
    font-size: 13px;
    transition: all 0.3s ease;
    &:hover {
      background-color: rgba(255, 255, 255, 1);
      color: #222;
    }
  }

  .hours {
    background: rgba(255, 255, 255, 0.15);
    &:hover {
      background-color: rgba(255, 255, 255, 0.15);
      color: inherit;
    }
  }
</style>
