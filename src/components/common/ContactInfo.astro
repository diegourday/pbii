---
import Pin from "@/icons/Pin.astro";
import Phone from "@/icons/Phone";
import Mail from "@/icons/Mail";

interface Props {
  color?: string;
}

const { color = "primary" } = Astro.props;
---

<section
  id="informacion"
  class="mx-auto grid w-full max-w-screen-2xl gap-x-6 md:grid-cols-[4fr_1fr] md:px-6"
>
  <div class="order-2 h-[400px] overflow-hidden md:order-1 md:rounded-md">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1935.2142575144203!2d-75.76533342354054!3d-14.05185483913632!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9110e3c55d585f5b%3A0x925b85a8d45daea2!2sInversiones%20Inmobiliarias%20PB%20S.A.C.!5e0!3m2!1ses-419!2spe!4v1728894294812!5m2!1ses-419!2spe"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="UbicaciÃ³n de PB Inversiones Inmobiliarias"
    >
    </iframe>
  </div>

  <div class="order-1 flex items-center justify-center text-white md:order-2">
    <div class={`w-full bg-${color} px-6 py-12 md:rounded-md md:px-8 md:py-8`}>
      <h2 class="mb-6 text-center text-2xl font-semibold">Datos de contacto</h2>
      <div class="flex flex-col gap-3 md:items-start">
        <a
          href="https://maps.app.goo.gl/mSUp3kyZy8uXmc2B7"
          target="_blank"
          rel="noopener noreferrer"
          class="contact-item"
        >
          <Pin className="size-5" /> Las Casuarinas 450B, Ica 11004
        </a>
        <a href="tel:+51924702290" class="contact-item">
          <Phone className="size-5" />
          (+51) 924 702 290
        </a>
        <a
          href="mailto:ventas@pbinversionesinmobiliarias.com"
          class="contact-item"
        >
          <Mail className="size-5" />
          ventas@pbinversionesinmobiliarias.com
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-item {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 6px;
    padding: 12px 12px;
    font-weight: 400;
    font-size: 13px;
    transition: all 0.3s ease;
    &:hover {
      background-color: rgba(255, 255, 255, 1);
      color: #222222;
    }
  }
</style>
