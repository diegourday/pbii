---
import MenuIcon from "@/icons/Menu.astro";
import CloseIcon from "@/icons/Close";
import PbiiLogo from "./PbiiLogo";
import HeaderLink from "./HeaderLink.astro";
---

<header id="header-nav" class="fixed top-0 z-40 w-full px-6 py-4">
  <div class="mx-auto flex max-w-[1200px] items-center justify-between">
    <a
      href="/"
      class="z-10"
      aria-label="Volver a la pÃ¡gina de inicio de PB Inversiones Inmobiliarias"
    >
      <PbiiLogo className="h-8 text-white" />
    </a>

    <nav
      id="header-menu"
      class="fixed inset-0 flex h-dvh w-full -translate-y-full flex-col items-center justify-center gap-10 bg-primary/95 text-white transition-transform target:translate-y-0 md:static md:h-[initial] md:translate-y-[initial] md:flex-row md:justify-end md:bg-[initial] md:text-sm"
    >
      <HeaderLink href="/">Inicio</HeaderLink>
      <HeaderLink href="/la-reserva">La Reserva</HeaderLink>
      <HeaderLink href="/la-reserva-ii">La Reserva II</HeaderLink>
      <!-- <HeaderLink href="/palma-real">Palma Real</HeaderLink> -->

      <a href="#header-nav" class="absolute right-6 top-4 md:hidden">
        <CloseIcon className="size-8" />
      </a>
    </nav>
    <a href="#header-menu" class="md:hidden">
      <MenuIcon className="text-white" />
    </a>
  </div>
</header>

<style>
  #header-nav {
    animation: blur linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }
</style>
