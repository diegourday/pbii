---
interface Props {
  variant?: "primary" | "secondary";
  class?: string;
}

const { variant = "primary", class: additionalClasses = "" } = Astro.props;

const primaryClasses =
  "bg-primary px-6 py-3 text-white transition-all duration-300 hover:bg-primary-dark hover:scale-105";
const secondaryClasses =
  "bg-secondary px-6 py-3 text-white transition-all duration-300 hover:bg-secondary-dark hover:scale-105";
---

<button
  class={`${variant === "primary" ? primaryClasses : secondaryClasses} ${additionalClasses}`}
>
  <slot />
</button>
