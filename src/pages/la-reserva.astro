---
import Info from "@/components/la-reserva/Info.astro";
import Benefits from "@/components/la-reserva/Benefits.tsx";
import Explore from "@/components/la-reserva/Explore";
import Layout from "@/layouts/Layout.astro";
import Security from "@/components/la-reserva/Security.astro";
import Testimony from "@/components/la-reserva/Testimony.astro";
import Gallery from "@/components/la-reserva/Gallery.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import LaReservaLogo from "@/components/common/LaReservaLogo.astro";
import { DOMAIN_URL } from "astro:env/server";
import PopupVisitForm from "@/components/PopupVisitForm";
---

<Layout
  title="La reserva | PB Inversiones Inmobiliarias"
  description="Descubre La Reserva, una urbanización exclusiva que ofrece un estilo de vida único con todas las comodidades y servicios que necesitas. Vive en un entorno seguro y rodeado de naturaleza."
  keywords="la reserva, la reserva ica, la reserva ii, la reserva pb inversiones, la reserva inmobiliaria, la reserva inmobiliaria ica, la reserva inmobiliaria pb inversiones, la reserva inmobiliaria pb inversiones ica"
  opDescription="Donde la exclusividad se encuentra con la naturaleza."
  opImage={`${DOMAIN_URL}/meta/la-reserva-op.webp`}
>
  <PopupVisitForm client:idle />
  <HeroContainer img="/la-reserva/servicios.webp" logo={LaReservaLogo} />
  <Info />
  <Security />
  <Benefits client:visible />
  <Testimony />
  <Explore client:visible />
  <Gallery />
</Layout>
