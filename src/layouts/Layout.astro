---
import Footer from "../components/common/Footer.astro";
import Header from "../components/common/Header.astro";
import ContactForm from "@/components/common/ContactForm.tsx";
import ContactDetails from "@/components/common/ContactDetails.astro";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "../styles/sonner-styles.css";
import WhatsAppFixed from "@/components/common/WhatsAppFixed.astro";
import PopupForm from "@/components/PopupForm.tsx";
import { ClientRouter } from "astro:transitions";
import { Toaster } from "sonner";

interface Props {
  title: string;
  description: string;
  keywords: string;
  opDescription: string;
  opImage: string;
}

const { title, description, keywords, opDescription, opImage } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Diego Urday, Suggestion" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={opDescription} />
    <meta property="og:image" content={opImage} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="pbinversionesinmobiliarias.com" />
    <meta property="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={opDescription} />
    <meta name="twitter:image" content={opImage} />

    <ClientRouter />
  </head>
  <body>
    <PopupForm client:load />
    <Toaster
      client:idle
      position="top-center"
      richColors
      visibleToasts={1}
      toastOptions={{
        className: "text-base",
        duration: 6000,
      }}
    />
    <Header />
    <main>
      <slot />
    </main>
    <ContactDetails />
    <!-- CONTACT FORM ON PAGE -->
    <ContactForm client:visible />
    <Footer />
    <WhatsAppFixed />
  </body>
</html>

<style is:global>
  :root {
    --primary: #154142;
    --primary-light: #1c5c5e;
    --primary-dark: #0b3132;
    --primary-rgba: 21, 65, 66;
    --secondary: #b6a27a;
    --secondary-dark: #a38c5d;
  }

  html {
    font-family: "Poppins", system-ui, sans-serif;
    background-color: white;
    scroll-behavior: smooth;
  }

  body {
    text-wrap: pretty;
  }

  p,
  span {
    line-height: 1.7;
    letter-spacing: 0.2px;
    font-weight: 300;
  }

  label {
    color: var(--primary);
    font-weight: 500;
    padding-bottom: 4px;
  }

  .info-container {
    margin: 0 auto;
    max-width: 600px;
    padding: 64px 32px 0;

    @media (min-width: 768px) {
      padding-top: 80px;
    }
  }

  .button-primary {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    background-color: var(--primary);
    padding: 12px 24px;
    color: white;
    transition: all 0.3s ease;
    &:hover {
      background-color: var(--primary-dark);
      transform: scale(1.03);
    }
    &:active {
      transform: scale(1);
    }
  }

  .button-secondary {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    background-color: var(--secondary);
    padding: 12px 24px;
    color: white;
    transition: all 0.3s ease;
    &:hover {
      background-color: var(--secondary-dark);
      transform: scale(1.03);
    }
    &:active {
      transform: scale(1);
    }
  }

  .contactForm__input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #aaa;
    outline: none;
    transition: border-color 300ms ease;
    &:focus {
      border-color: var(--primary);
    }
  }

  .contactForm__inputMessage {
    color: red;
    font-size: 0.875rem;
    font-weight: 400;
    padding-top: 2px;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-32px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blur {
    to {
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  @keyframes stroke {
    0% {
      stroke-dasharray: 0, 100;
    }
    50% {
      stroke-dasharray: 50, 50;
    }
    100% {
      stroke-dasharray: 100, 0;
    }
  }

  @keyframes reveal {
    from {
      opacity: 0;
      translate: 0 100px;
      scale: 0.9;
    }

    to {
      opacity: 1;
      translate: 0 0;
      scale: 1;
    }
  }

  @media (max-width: 768px) {
    .button-primary,
    .button-secondary {
      padding: 16px 32px;
    }
  }

  @media (min-width: 640px) {
    ::-webkit-scrollbar {
      width: 7px;
    }
    ::-webkit-scrollbar-thumb {
      background: var(--secondary);
      border-radius: 5px;
      cursor: pointer;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: var(--secondary-dark);
    }

    ::selection {
      background-color: #154142e0;
      color: white;
    }
  }
</style>
